<h1> Edit <%= @post.name %></h1> 

<form action="/posts/<%=post.id%>" method="POST"> 
    <label>Title </label>
    <input type="text" name="title" value="<%=@post.title%>" 
    <br>  
    <label>Date Seen</label>
    <input type="date" name="date" value="<%=@post.date%>" 
    <br> 
    <label>Description</label>
    <textarea name="description" value="<%=@post.description%>" 
    <br>  
    <label>Latitude</label>
    <input type="number" name="latitude" value="<%=@post.latitude%>"
    <br> 
    <label>Longitude</label>
    <input type="number" name="longitude" value="<%=@post.longitude%>"
    <br> 
    <label>Link to Picture </label>
    <input type="text" name="link" value="<%=@post.link%>" 
    <br> 
    <h6> Edit Post </h6> 
    <br> 
    <input type="submit" value="Update" 
</form> 
