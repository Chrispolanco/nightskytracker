<h1> <%= @post.title %></h1> 

<form action="/posts/<%=@post.id%>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch"> 
    <label for ="title"> Title </label>
    <input type="text" name="title" value="<%=@post.title%>"/>
    <br>
    <label for="date">Date Seen</label>
    <input type="date" name="date" value="<%=@post.date%>"/>
    <br> 
    <label for="description">Description</label>
    <textarea name="description"> <%=@post.description%> </textarea>
    <br>  
    <label for="latitude">Latitude</label>
    <input type="number" name="latitude" min="-90" max="90" value="<%=@post.latitude%>"/>
    <br> 
    <label for="longitude">Longitude</label>
    <input type="number" name="longitude" min="-180" max="180" value="<%=@post.longitude%>"/> 
    <br> 
    <label for="link">Link to Picture </label>
    <input type="text" name="link" value="<%=@post.link%>"/>
    <br> 
    <input type="submit" value="Update Post"/> 
</form> 

